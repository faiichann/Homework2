<div>
    <div class="text-center">
        <h1 class="display-2 mb-4 p-3 mb-2 bg-warning text-white">Game Order</h1>
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-6" style="margin-top:20px">
                    <form asp-controller="Order" asp-action="Buy" method="post" class=" pt-4 pb-5 pl-2 pr-2 shadow p-3 mb-5 bg-white rounded">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Enter Name of Game :</label>
                            <div class="col-sm-5">
                                <input name="game" type="text" value="" class="form-control" id="colFormLabel">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Enter Quality :</label>
                            <div class="col-sm-5">
                                <input name="qty" type="text" value="" class="form-control" id="colFormLabel">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Enter Price :</label>
                            <div class="col-sm-5">
                                <input name="pri" type="text" value="" class="form-control">
                            </div>
                        </div>
                        <input class="btn btn-primary" type="submit" value="Buy" />
                    </form>
                </div>
                <div class="col-6">
                    <div class="mt-3 alert-warning p-5">
                        <div class="" role="alert" id="myForm">
                            <h3 class="alert-heading">My Order</h3>
                            <div style="text-align:left">
                                <p class="h5">Game : @ViewBag.namegame</p>
                                <p class="h5">Quality : @ViewBag.qty </p>
                                <p class="h5">Price : @ViewBag.pri Bath</p>
                                <p class="h5">Total : @ViewBag.total Bath</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a asp-area="" asp-controller="Order" asp-action="list"><input class="btn btn-danger" type="reset" value="Back To Store" /></a>
    </div>
        @section Scripts
{
            <script type="text/javascript">
            </script>
        }
    </div>